                                            "username": {
                                                "type": "string",
                                                "example": "user1"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email",
                                                "example": "user1@example.com"
                                            },
                                            "phone": {
                                                "type": "string",
                                                "example": "123456789"
                                            },
                                            "fullName": {
                                                "type": "string",
                                                "example": "John Doe"
                                            },
                                            "address": {
                                                "type": "string",
                                                "example": "123 Main St"
                                            },
                                            "avatar": {
                                                "type": "string",
                                                "example": "avatars/user1.jpg"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
